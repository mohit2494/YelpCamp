<!-- EJS Tag for including header file -->
<% include ../partials/header %>

<div class="container">
     
     <!-- Making header of the campgrounds page -->
     <header class="jumbotron">
          <div class="container">
               <h1>Welcome to YelpCamp!</h1>
               <p>View our hand-picked campgrounds from all over the world</p>
               <p><a class="btn btn-primary btn-md" href="/campgrounds/new"> Add New Campground</a></p>
          </div>
     </header>
     
     
     <!-- Making a grid of images for rendering campgrounds -->
     <div class="row text-center" style="display:flex; flex-wrap:wrap;">
          <% campgrounds.forEach(function(campground){ %>
               <!-- Making a div tab for each of the campgrounds -->
               <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                         <img src= "<%= campground.image %>"> </img>
                         <div class="caption">
                              <h4><strong><%= campground.name %></strong></h4>
                         </div>
                         <p>
                              <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">More Info</a>
                         </p>
                    </div>
               </div>
          <% }); %>
     </div>
     
</div>

<!-- EJS Tag for including footer file -->
<% include ../partials/footer %>